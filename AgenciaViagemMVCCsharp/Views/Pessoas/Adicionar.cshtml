@model AgenciaViagemMVCCsharp.Models.Pessoas
@using AgenciaViagemMVCCsharp.Models

<div class="row body-content" style="background-color:white;">

    <h2>@ViewBag.Title</h2>
    <h3 class="badge bg-primary">@ViewBag.Message</h3>

    @using (Html.BeginForm("Salvar", "Pessoas", FormMethod.Post, new { id = "formPessoasAdicionar", name = "formPessoasAdicionar" }))
    {
        <div class="row col-md-offset-3">
            @Html.LabelFor(Model => Model.Nome, new { @class = "col-sm-2 col-form-label text-right" })
            <div class="col-sm-4">
                @Html.TextBoxFor(Model => Model.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row col-md-offset-3">
            @Html.LabelFor(Model => Model.Cpf, new { @class = "col-sm-2 col-form-label text-right" })
            <div class="col-sm-4">
                @Html.TextBoxFor(Model => Model.Cpf, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.Cpf, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row col-md-offset-3">
            @Html.LabelFor(Model => Model.Endereco, new { @class = "col-sm-2 col-form-label text-right" })
            <div class="col-sm-4">
                @Html.TextBoxFor(Model => Model.Endereco, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.Endereco, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row col-md-offset-3">
            @Html.LabelFor(Model => Model.Telefone, new { @class = "col-sm-2 col-form-label text-right" })
            <div class="col-sm-4">
                @Html.TextBoxFor(Model => Model.Telefone, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.Telefone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row col-md-offset-3">
            @Html.LabelFor(Model => Model.Cupom, new { @class = "col-sm-2 col-form-label text-right" })
            <div class="col-sm-4">
                @Html.TextBoxFor(Model => Model.Cupom, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.Cupom, "", new { @class = "text-danger" })

            </div>
        </div>

        <hr />
        <br />
        <div class="button">
            <button class="btn btn-success" type="submit">Salvar</button>
        </div>
    }
</div>
