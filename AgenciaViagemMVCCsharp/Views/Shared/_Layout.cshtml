<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color: rgb(32,32,32);">
    <div class="navbar navbar-inverse navbar-fixed-top" style="font-family: 'Shalimar', cursive;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Agência de Viagem", "Index", "Home", new { area = "" }, new { @class = "navbar-brand bg-primary",
               @style = "color: white;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                    <li>@Html.ActionLink("Cadastrar", "Adicionar", "Pessoas")</li>
                    <li>@Html.ActionLink("Promoções", "Promocoes", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contato", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" id="text_info">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:white;">&copy; @DateTime.Now.Year - Desenvolvido por Romullo Santos</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
